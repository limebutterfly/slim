<h1>Listing search results</h1>
Total: <%= @compounds_count %> compounds (from <%= @start %> to <%= @end %>)
<br />
<%= paginate @compounds %>
<table>
  <thead>
    <tr>
      <th>Result ID</th>
      <th>Lipid</th>
      <th>Compound</th>
      <th>Score</th>
      <th>Frag. score</th>
      <th>Mass error</th>
      <th>Isotope sim S.</th>
      <!--<th>Same Lipid</th>-->
    </tr>
  </thead>

  <tbody>
    <% @compounds.each_with_index do |compound, i| %>
      <tr>
        <td><%= link_to compound.compound_id, compound_path(compound) %></td>
        <td><%= link_to compound.description, lipid_path(compound.lipid) %></td>
        <td><%= compound.compound %></td>
        <td><%= "%02.1f"%compound.score %></td>
        <td><%= "%02.1f"%compound.fragmentation_score %></td>
        <td><%= "%.4f"%compound.mass_error %></td>
        <td><%= "%02.4f"%compound.isotope_similarity %></td>
        <!--<td><%= link_to "Same lipid", "/compounds/search_compounds.#{compound.compound_id}", :method=>:post %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @compounds %>
