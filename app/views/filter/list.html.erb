<h1>Results of feature filtering</h1>
<hr />
<%=render file: 'filter/show_filtering_criteria'%>

<%= form_tag(:controller => 'filter',:action => 'csv') do %>
    <%= button_to 'Export as csv','csv' %>
<% end %>
<hr />
<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th colspan="3"></th>
    <th colspan="<%=@samples.count%>" class="bg-warning">Raw Values</th>
    <th colspan="<%=@samples.count%>" class="bg-info">Normalized Values</th>
  </tr>
  <tr>
    <th>Feature</th>
    <th>Lipid</th>
    <th># Ident</th>
    <% @samples.each do |id, name| %>
        <th class="bg-warning"><%=name%></th>
    <% end %>
    <% @samples.each do |id, name| %>
        <th class="bg-info"><%=name%></th>
    <% end %>
  </tr>
  </thead>

  <tbody id="results">
  </tbody>
</table>
<div class="panel panel-warning" id="waiting">
  <div class="panel-body">
    <div class="container">
      <div class="span7 offset5 centered"><%= image_tag('ajax-loader.gif') %><br />waiting for filtering results...</div>
    </div>
  </div>
</div>