<h1>Listing lipids</h1>
Total: <%= @lipids_count %> lipids (from <%= @start %> to <%= @end %>)
<br />
<%= paginate @lipids %>

<table>
  <thead>
    <tr>
      <th>Internal ID</th>
      <th>LM ID</th>
      <th>Compound ID</th>
      <th>PUBCHEM SUBSTANE URL</th>
      <th>LIPID MAPS CMPD URL</th>
      <th>COMMON NAME</th>
      <th>SYSTEMATIC NAME</th>
      <th>SYNONYMS</th>
      <th>CATEGORY</th>
      <th>MAIN CLASS</th>
      <th>SUB CLASS</th>
      <th>EXACT MASS</th>
      <th>FORMULA</th>
      <th>PUBCHEM SID</th>
      <th>PUBCHEM CID</th>
      <th>KEGG</th>
      <th>CHEBI</th>
      <th>INCHI KEY</th>
      <th>STATUS</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lipids.each do |lipid| %>
      <tr>
        <td><%= lipid.id %></td>
        <td><%= lipid.lm_id %></td>
        <td><%= lipid.compounds.map{|comp| link_to(comp.id, "compounds/#{comp.id}")}.join(",").html_safe %></td>
        <td><%= link_to lipid.pubchem_substane_url, lipid.pubchem_substane_url, :target=>"_blank" %></td>
        <td><%= link_to lipid.lipid_maps_cmpd_url, lipid.lipid_maps_cmpd_url, :target=>"_blank" %></td>
        <td><%= lipid.common_name %></td>
        <td><%= lipid.systematic_name %></td>
        <td><%= lipid.synonyms %></td>
        <td><%= link_to lipid.category.name, "/categories/#{lipid.category.id}" %></td>
        <td><%= lipid.main_class %></td>
        <td><%= lipid.sub_class %></td>
        <td><%= lipid.exact_mass %></td>
        <td><%= lipid.formula %></td>
        <td><%= lipid.pubchem_sid %></td>
        <td><%= lipid.pubchem_cid %></td>
        <td><%= lipid.kegg_id %></td>
        <td><%= lipid.chebi_id %></td>
        <td><%= lipid.inchi_key %></td>
        <td><%= lipid.status %></td>
        <td><%= link_to 'Show', lipid %></td>
        <td><%= link_to 'Edit', edit_lipid_path(lipid) %></td>
        <td><%= link_to 'Destroy', lipid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @lipids %>
<br />
<%= link_to 'New Lipid', new_lipid_path %>
